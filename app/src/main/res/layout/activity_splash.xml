<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.vegantravels.activities.SplashActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/seventy"
        android:text="@string/shore_excursion_management"
        android:textColor="@color/black"
        android:textSize="@dimen/thirty"
        android:gravity="center_horizontal"/>

    <ImageView
        android:layout_width="@dimen/three_hundred"
        android:layout_height="@dimen/three_hundred"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        android:src="@drawable/logo" />

    <ImageView
        android:layout_width="@dimen/two_hundred"
        android:layout_height="@dimen/hundred"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/hundred_sixty"
        android:scaleType="fitCenter"
        android:src="@drawable/slogan" />

</RelativeLayout>