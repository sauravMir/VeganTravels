<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vegantravels.activities.GuestListTwoActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/five"
        android:paddingRight="@dimen/five"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight=".3"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight=".5"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight=".4"
                        android:gravity="bottom"
                        android:text="Cabin No"
                        android:textSize="@dimen/fifteen" />

                    <EditText
                        android:id="@+id/edtCabinNo"
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:gravity="bottom" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight=".4"
                        android:gravity="bottom"
                        android:text="name"
                        android:textSize="@dimen/fifteen" />

                    <EditText
                        android:id="@+id/edtGuestName"
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:gravity="bottom" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight=".4"
                        android:gravity="bottom"
                        android:text="Number of people"
                        android:textSize="@dimen/fifteen" />

                    <EditText
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:gravity="bottom" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight=".4"
                        android:gravity="bottom"
                        android:text="Payment status"
                        android:textSize="@dimen/fifteen" />

                    <EditText
                        android:id="@+id/edtPaymentStatus"
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:gravity="bottom" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight=".5"
                android:gravity="right"
                android:orientation="horizontal"
                android:weightSum="1">

                <View
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight=".6" />

                <ImageButton
                    android:id="@+id/ibtnGuestSearch"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight=".2"
                    android:background="@color/transparent"
                    android:padding="@dimen/five"
                    android:scaleType="fitCenter"
                    android:src="@android:drawable/ic_menu_search" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    android:gravity="left|center"
                    android:text="Search"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twenty" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight=".6"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight=".2"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Guest Name"
                    android:textSize="@dimen/fifteen" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Number of people"
                    android:textSize="@dimen/fifteen" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/two"
                    android:text="Ship name"
                    android:textSize="@dimen/fifteen" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/two"
                    android:text="Excursion"
                    android:textSize="@dimen/fifteen" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/two"
                    android:text="Action"
                    android:textSize="@dimen/fifteen" />
            </LinearLayout>

            <ListView
                android:id="@+id/lstGuest"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight=".8" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight=".1"
            android:weightSum="1">

            <View
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight=".6" />

            <Button
                android:id="@+id/btnExportGuest"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="Export" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
