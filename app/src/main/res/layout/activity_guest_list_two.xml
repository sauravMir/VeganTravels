<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_bg_blue">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/five"
        android:paddingRight="@dimen/five"
        android:weightSum="1">

       <View
           android:layout_width="match_parent"
           android:layout_height="@dimen/zero"
           android:layout_weight=".1"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight=".3"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight=".7"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight=".25"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight=".4"
                        android:gravity="bottom"
                        android:text="Cabin No"
                        android:textSize="@dimen/twelve" />

                    <EditText
                        android:id="@+id/edtCabinNo"
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:gravity="bottom" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight=".25"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight=".4"
                        android:gravity="bottom"
                        android:text="name"
                        android:textSize="@dimen/twelve" />

                    <EditText
                        android:id="@+id/edtGuestName"
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:gravity="bottom" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight=".25"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight=".4"
                        android:gravity="bottom"
                        android:text="Number of people"
                        android:textSize="@dimen/twelve" />

                    <EditText
                        android:id="@+id/edtPeopleNumber"
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:gravity="bottom" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight=".25"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight=".4"
                        android:gravity="bottom"
                        android:text="Payment status"
                        android:textSize="@dimen/twelve" />

                    <EditText
                        android:id="@+id/edtPaymentStatus"
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight=".6"
                        android:gravity="bottom" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight=".3"
                android:gravity="right"
                android:orientation="horizontal"
                android:weightSum="1">

                <View
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight=".7" />

                <ImageButton
                    android:id="@+id/ibtnGuestSearch"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight=".1"
                    android:background="@color/transparent"
                    android:padding="@dimen/two"
                    android:scaleType="fitCenter"
                    android:src="@android:drawable/ic_menu_search" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    android:gravity="left|center"
                    android:text="Search"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight=".5"
            android:orientation="vertical"
            android:padding="@dimen/five"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight=".12"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Guest Name"
                    android:textSize="@dimen/twelve" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Number of people"
                    android:textSize="@dimen/twelve" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/two"
                    android:text="Ship name"
                    android:textSize="@dimen/twelve" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/two"
                    android:text="Excursion"
                    android:textSize="@dimen/twelve" />

                <TextView
                    android:layout_width="@dimen/zero"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/two"
                    android:text="Action"
                    android:textSize="@dimen/twelve" />
            </LinearLayout>

            <ListView
                android:id="@+id/lstGuest"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight=".88"
                android:dividerHeight="@dimen/ten" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight=".1"
            android:weightSum="1">

            <View
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight=".6" />

            <Button
                android:id="@+id/btnExportGuest"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="Export" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty"
        android:background="@drawable/top_cell">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="@dimen/ten"
            android:text="@string/guest_list"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_five" />

        <ImageButton
            android:id="@+id/ibtnBackGuestlist"
            android:layout_width="@dimen/fifty"
            android:layout_height="@dimen/fifty"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:padding="@dimen/ten"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_back" />
    </RelativeLayout>

</RelativeLayout>
