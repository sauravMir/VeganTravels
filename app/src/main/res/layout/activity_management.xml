<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_bg_blue"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight=".15"
            android:background="@color/app_color"
            android:gravity="center"
            android:text="WHAT DO YOU WANT TO DO?"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight=".15" />

        <TextView
            android:id="@+id/tvCruiseMngmnt"
            android:layout_width="@dimen/three_hundred"
            android:layout_height="@dimen/zero"
            android:layout_weight=".1"
            android:background="@drawable/cell_bg"
            android:gravity="center"
            android:text="CRUISE MANAGEMENT"
            android:textSize="@dimen/twenty" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight=".05" />

        <TextView
            android:id="@+id/tvExcursionMngmnt"
            android:layout_width="@dimen/three_hundred"
            android:layout_height="@dimen/zero"
            android:layout_weight=".1"
            android:background="@drawable/cell_bg"
            android:gravity="center"
            android:text="EXCURSION MANAGEMENT"
            android:textSize="@dimen/twenty" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight=".05" />

        <TextView
            android:id="@+id/tvExport"
            android:layout_width="@dimen/three_hundred"
            android:layout_height="@dimen/zero"
            android:layout_weight=".1"
            android:background="@drawable/cell_bg"
            android:gravity="center"
            android:text="EXPORT"
            android:textSize="@dimen/twenty" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight=".05" />

        <TextView
            android:id="@+id/tvFinancial"
            android:layout_width="@dimen/three_hundred"
            android:layout_height="@dimen/zero"
            android:layout_weight=".1"
            android:background="@drawable/cell_bg"
            android:gravity="center"
            android:text="FINANCIALS"
            android:textSize="@dimen/twenty" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight=".15" />

    </LinearLayout>


</RelativeLayout>
